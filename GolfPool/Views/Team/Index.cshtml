@model GolfPool.Controllers.TeamVM

@{
    ViewBag.Title = "New Team";
}

@section scripts
{
        <script type="text/javascript">
        $(function () {
            $(window).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        });
    </script>
}

